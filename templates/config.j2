{% if dnsmasq_listen_address | default(False) %}
listen-address={{ dnsmasq_listen_address | join(',') }}
{% else %}
bind-interfaces
{% if dnsmasq_interfaces | default(False) %}
interface={{ dnsmasq_interfaces | join(',') }}
{% endif %}
{% endif %}

no-resolv
no-poll
expand-hosts

{% for item in dnsmasq_nameservers %}
server={{ item }}
{% endfor %}
